{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10">
    <h1 class="text-2xl font-bold text-primary-700 mb-6">Liste des demandes de réparation d'objets HS</h1>
    <!-- Boutons pour ajouter de nouvelles demandes -->
    <!-- Cartes des activités -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-6">
        <!-- Nouvelle demande d'objet HS -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <div class="h-40 bg-gray-300">
                <!-- Remplacez par l'image associée -->
                <img src="assets/illustration/object-hs.webp" alt="Nouvel objet HS" class="w-full h-full object-cover">
            </div>
            <div class="p-4">
                <h2 class="text-lg font-bold text-gray-800">Nouvel objet HS</h2>
                <p class="text-gray-600">Créez une nouvelle demande pour signaler un objet HS nécessitant une réparation.</p>
            </div>
            <div class="bg-gray-100 p-3 text-center">
                <a href="{{ path('app_object_hs_new') }}"
                   class="text-primary-700 font-semibold hover:underline">
                    Ajouter un objet HS
                </a>
            </div>
        </div>

        <!-- Demande de toiture -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <div class="h-40 bg-gray-300">
                <!-- Remplacez par l'image associée -->
                <img src="assets/illustration/roofing.png" alt="Demande de toiture" class="w-full h-full object-cover">
            </div>
            <div class="p-4">
                <h2 class="text-lg font-bold text-gray-800">Demande de toiture</h2>
                <p class="text-gray-600">Soumettez une demande de réparation ou d'installation de toiture.</p>
            </div>
            <div class="bg-gray-100 p-3 text-center">
                <a href="{{ path('app_roofing_new', { 'type': 'roofing' }) }}"
                   class="text-primary-700 font-semibold hover:underline">
                    Ajouter une toiture
                </a>
            </div>
        </div>

        <!-- Demande de peinture -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <div class="h-40 bg-gray-300">
                <!-- Remplacez par l'image associée -->
                <img src="assets/illustration/painting.webp" alt="Demande de peinture" class="w-full h-full object-cover">
            </div>
            <div class="p-4">
                <h2 class="text-lg font-bold text-gray-800">Demande de peinture</h2>
                <p class="text-gray-600">Créez une demande pour une nouvelle peinture ou une rénovation.</p>
            </div>
            <div class="bg-gray-100 p-3 text-center">
                <a href="{{ path('app_roofing_new', { 'type': 'painting' }) }}"
                   class="text-primary-700 font-semibold hover:underline">
                    Ajouter une peinture
                </a>
            </div>
        </div>
    </div>

    {% include 'components/tableObjectHS.html.twig' %}


    <div class="mt-4">
        <a href="{{ path('app_object_hs_index') }}"
           class="inline-block px-6 py-2 bg-primary-700 text-white rounded-lg hover:bg-primary-800">
            Voir l'intégralité des demandes
        </a>
    </div>

    {% include 'components/tableHomeRepair.html.twig' %}

    <div class="mt-4">
        <a href="{{ path('app_home_repair_index') }}"
           class="inline-block px-6 py-2 bg-primary-700 text-white rounded-lg hover:bg-primary-800">
            Voir l'intégralité des demandes
        </a>
    </div>



{% endblock %}