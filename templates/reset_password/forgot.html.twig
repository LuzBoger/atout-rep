{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
        <form method="post" class="space-y-4">
            {% set errorMessages = app.flashes('error') %}
            {% set successMessages = app.flashes('success') %}

            {% if errorMessages is not empty %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                    {% for message in errorMessages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endif %}

            {% if successMessages is not empty %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
                    {% for message in successMessages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endif %}


            <h1 class="text-2xl font-semibold text-gray-800">Mot de passe oublié</h1>
            <p class="text-sm font-semibold text-primary-800">
                Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </p>

            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Adresse e-mail</label>
                <input type="email" name="email" id="email"
                       class="mt-1 block w-full border p-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Votre adresse e-mail" required>
            </div>

            <div class="flex flex-col gap-4">
                <button type="submit" class="w-full px-4 py-2 bg-primary-700 text-white rounded-lg hover:bg-primary-800 focus:outline-none">
                    Envoyer le lien de réinitialisation
                </button>
                <a href="{{ path('app_login') }}" class="text-center text-primary-800 underline cursor-pointer transition hover:text-primary-900">
                    Vous vous en souvenez ?<BR> Connectez-vous
                </a>
            </div>
        </form>
    </div>
{% endblock %}
