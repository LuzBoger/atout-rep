{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe {% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-semibold text-003D5B mb-4">Réinitialisation du mot de passe</h1>
        {{ form_start(form) }}
        <div>
            <label for="{{ form.email.vars.id }}" class="block text-sm font-medium text-gray-700">
                {{ form.email.vars.label }}
            </label>
            {{ form_widget(form.email, {
                'attr': {
                    'class': 'mt-1 block w-full border p-2 border-gray-300 rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500',
                    'readonly': true
                }
            }) }}
            {{ form_errors(form.email) }}
        </div>

        <div>
            <label for="{{ form.plainPassword.vars.id }}" class="block text-sm font-medium text-gray-700">
                {{ form.plainPassword.vars.label }}
            </label>
            {{ form_widget(form.plainPassword, {
                'attr': {
                    'class': 'mt-1 block w-full border p-2 border-gray-300 rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500'
                }
            }) }}
            {{ form_errors(form.plainPassword) }}
        </div>

        <div>
            <label for="{{ form.repeatPassword.vars.id }}" class="block text-sm font-medium text-gray-700">
                {{ form.repeatPassword.vars.label }}
            </label>
            {{ form_widget(form.repeatPassword, {
                'attr': {
                    'class': 'mt-1 block w-full border p-2 border-gray-300 rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500'
                }
            }) }}
            {{ form_errors(form.repeatPassword) }}
        </div>

        <button type="submit" class="w-full px-4 py-2 mt-4 bg-primary-700 text-white rounded-lg hover:bg-primary-800 focus:outline-none">
            Réinitialiser le mot de passe
        </button>

        {{ form_end(form) }}

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mt-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mt-4">
                {{ message }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
