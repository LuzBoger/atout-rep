{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-semibold text-003D5B mb-4">Cr√©er un compte</h1>

        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.surname) }}
        {{ form_row(form.email) }}
        {{ form_row(form.phone) }}
        {{ form_row(form.plainPassword) }}
        <button type="submit" class="w-full px-4 py-2 mt-2 bg-primary-700 text-white rounded-lg hover:bg-primary-800 focus:outline-none">
            S'inscrire
        </button>
        {{ form_end(form) }}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
    </div>
{% endblock %}
