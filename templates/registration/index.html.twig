{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-semibold text-primary-700 mb-4">Créer un compte</h1>

        {{ form_start(form, { 'attr': { 'class': 'space-y-4' } }) }}

        <!-- Prénom -->
        <div>
            <label for="{{ form.name.vars.id }}" class="block text-sm font-medium text-gray-700">
                {{ form.name.vars.label }}
            </label>
            {{ form_widget(form.name, {
                'attr': {
                    'class': 'mt-1 block w-full border p-2 border-gray-300 rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500'
                }
            }) }}
            {{ form_errors(form.name) }}
        </div>

        <!-- Nom -->
        <div>
            <label for="{{ form.surname.vars.id }}" class="block text-sm font-medium text-gray-700">
                {{ form.surname.vars.label }}
            </label>
            {{ form_widget(form.surname, {
                'attr': {
                    'class': 'mt-1 block w-full border p-2 border-gray-300 rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500'
                }
            }) }}
            {{ form_errors(form.surname) }}
        </div>

        <!-- Email -->
        <div>
            <label for="{{ form.email.vars.id }}" class="block text-sm font-medium text-gray-700">
                {{ form.email.vars.label }}
            </label>
            {{ form_widget(form.email, {
                'attr': {
                    'class': 'mt-1 block w-full border p-2 border-gray-300 rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500'
                }
            }) }}
            {{ form_errors(form.email) }}
        </div>

        <!-- Numéro de téléphone -->
        <div>
            <label for="{{ form.phone.vars.id }}" class="block text-sm font-medium text-gray-700">
                {{ form.phone.vars.label }}
            </label>
            {{ form_widget(form.phone, {
                'attr': {
                    'class': 'mt-1 block w-full border p-2 border-gray-300 rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500'
                }
            }) }}
            {{ form_errors(form.phone) }}
        </div>

        <!-- Mot de passe -->
        <div>
            <label for="{{ form.plainPassword.vars.id }}" class="block text-sm font-medium text-gray-700">
                {{ form.plainPassword.vars.label }}
            </label>
            {{ form_widget(form.plainPassword, {
                'attr': {
                    'class': 'mt-1 block w-full border p-2 border-gray-300 rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500'
                }
            }) }}
            {{ form_errors(form.plainPassword) }}
        </div>

        <!-- Bouton d'inscription -->
        <div class="flex flex-col gap-2">
            <button type="submit" class="w-full px-4 py-2 bg-primary-700 text-white rounded-lg hover:bg-primary-800 focus:outline-none">
                S'inscrire
            </button>
            <a href="{{ path('app_login') }}" class="text-primary-800 underline cursor-pointer transition hover:text-primary-900">
                Vous avez déjà un compte ? Connectez-vous ici
            </a>
        </div>

        {{ form_end(form) }}

        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mt-4" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mt-4" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
