{% extends 'base.html.twig' %}

{% block title %}HomeRepair index{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10">
        <h1 class="text-2xl font-bold text-primary-700 mb-6">Historique des demandes de réparation maison</h1>

        <!-- Formulaire de filtrage -->
        <form method="GET" action="{{ path('app_home_repair_index_admin') }}" class="mb-4 flex items-center gap-4">
            <label for="status" class="text-gray-700">Filtrer par statut :</label>
            <select name="status" id="status" class="border border-gray-300 rounded p-2" onchange="this.form.submit()">
                <option value="pending" {{ current_status == 'pending' ? 'selected' : '' }}>En attente</option>
                <option value="validated" {{ current_status == 'validated' ? 'selected' : '' }}>Validé</option>
                <option value="rejected" {{ current_status == 'rejected' ? 'selected' : '' }}>Rejeté</option>
                <option value="completed" {{ current_status == 'completed' ? 'selected' : '' }}>Terminé</option>
                <option value="cancelled" {{ current_status == 'cancelled' ? 'selected' : '' }}>Annulé</option>
            </select>
        </form>

        {% include 'components/admin/tableHomeRepairAdmin.html.twig' %}
    </div>
{% endblock %}
