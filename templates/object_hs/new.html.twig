{% extends 'base.html.twig' %}

{% block title %}New ObjectHS{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-semibold text-primary-700 mb-6">
            {% if step == 1 %} Étape 1 : Informations sur l'objet {% endif %}
            {% if step == 2 %} Étape 2 : Date associée {% endif %}
        </h1>

        <!-- Barre de progression -->
        <div class="flex items-center mb-6">
            <div class="w-1/2 text-center">
                <div class="w-8 h-8 mx-auto flex items-center justify-center border rounded-full {% if step >= 1 %}bg-primary-700 text-white{% else %}bg-gray-300 text-gray-600{% endif %}">
                    1
                </div>
                <p class="mt-2">Objet</p>
            </div>
            <div class="flex-1 border-t {% if step >= 2 %}border-primary-700{% else %}border-gray-300{% endif %}"></div>
            <div class="w-1/2 text-center">
                <div class="w-8 h-8 mx-auto flex items-center justify-center border rounded-full {% if step >= 2 %}bg-primary-700 text-white{% else %}bg-gray-300 text-gray-600{% endif %}">
                    2
                </div>
                <p class="mt-2">Date</p>
            </div>
        </div>

        <!-- Formulaires -->
        {% if step == 1 %}
            {{ form_start(formObjectHS) }}
            <div class="space-y-4">
                {{ form_row(formObjectHS.name) }}
                {{ form_row(formObjectHS.state) }}
                {{ form_row(formObjectHS.age) }}
                {{ form_row(formObjectHS.Details) }}
            </div>
            <button type="submit" class="mt-6 px-4 py-2 bg-primary-700 text-white rounded-lg hover:bg-primary-800">
                Suivant
            </button>
            {{ form_end(formObjectHS) }}
        {% endif %}

        {% if step == 2 %}
            {{ form_start(formDates) }}
            <div class="space-y-4">
                {{ form_row(formDates.date) }}
                {{ form_row(formDates.address) }}
            </div>
            <button type="submit" class="mt-6 px-4 py-2 bg-primary-700 text-white rounded-lg hover:bg-primary-800">
                Terminer
            </button>
            {{ form_end(formDates) }}
        {% endif %}
    </div>
{% endblock %}
